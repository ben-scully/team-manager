<p id="notice"><%= notice %></p>

<h1>Game</h1>

<p>
  <%= @game.display_name %>
</p>

<p>
  <strong>Name</strong>
  <%= @game.name %>

  <br>

  <strong>Start</strong>
  <%= @game.start %>
</p>

<%= link_to 'Edit', [:edit, @game.squad, @game] %> |
<%= link_to 'Back to Squad', @game.squad %>

<h2>Game Members</h2>

<p>
  <%= link_to 'New Game member', new_squad_game_game_member_path(@game.squad, @game) %>
</p>

<h4>Active</h4>

<table>
  <tbody>
    <% @game.game_members.active.each do |game_member| %>
      <tr>
        <td><%= game_member.display_name %></td>
        <td><%= link_to 'Show', [@game.squad, @game, game_member] %></td>
        <td><%= link_to 'Edit', [:edit, @game.squad, @game, game_member] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h4>Inactive</h4>

<table>
  <tbody>
    <% @game.game_members.inactive.each do |game_member| %>
      <tr>
        <td><%= game_member.display_name %></td>
        <td><%= link_to 'Show', [@game.squad, @game, game_member] %></td>
        <td><%= link_to 'Edit', [:edit, @game.squad, @game, game_member] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
